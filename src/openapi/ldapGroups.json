{
  "openapi": "3.0.0",
  "info": {
    "title": "LDAP Groups API",
    "version": "1.0.0",
    "description": "API for managing LDAP groups and their members"
  },
  "paths": {
    "/api/v1/ldap/groups": {
      "get": {
        "summary": "List groups",
        "parameters": [
          {
            "name": "match",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Group name filter (can be a full name, wildcard pattern, or LDAP filter with '=')"
          },
          {
            "name": "attributes",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Comma-separated list of attributes to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of groups",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "oneOf": [
                        { "type": "string" },
                        { "type": "array", "items": { "type": "string" } }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/api/v1/ldap/groups": {
      "post": {
        "summary": "Add a new group",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cn": { "type": "string" },
                  "member": {
                    "oneOf": [
                      { "type": "string" },
                      { "type": "array", "items": { "type": "string" } }
                    ]
                  }
                },
                "required": ["cn"],
                "additionalProperties": true,
                "description": "Additional LDAP attributes can be included beyond cn and member"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Group added" },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/api/v1/ldap/groups/{cn}": {
      "get": {
        "summary": "Get a group by cn or DN",
        "parameters": [
          {
            "name": "cn",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Group identifier (cn value or full DN - URL encoded if DN)"
          }
        ],
        "responses": {
          "200": {
            "description": "Group found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dn": { "type": "string" },
                    "cn": { "type": "string" },
                    "member": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": true,
                  "description": "The group entry with all attributes"
                }
              }
            }
          },
          "404": {
            "description": "Group not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete a group",
        "parameters": [
          {
            "name": "cn",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Group deleted" },
          "400": { "description": "Bad request" }
        }
      },
      "put": {
        "summary": "Modify a group",
        "parameters": [
          {
            "name": "cn",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "add": {
                    "type": "object",
                    "description": "Attributes to add (cannot include 'member' or cn attribute)"
                  },
                  "replace": {
                    "type": "object",
                    "description": "Attributes to replace (cannot include 'member' or cn attribute)"
                  },
                  "delete": {
                    "oneOf": [
                      { "type": "array", "items": { "type": "string" } },
                      { "type": "object" }
                    ],
                    "description": "Attributes to delete (cannot include 'member' or cn attribute)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Group modified" },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/api/v1/ldap/groups/{cn}/members": {
      "post": {
        "summary": "Add member(s) to a group",
        "parameters": [
          {
            "name": "cn",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "member": {
                    "oneOf": [
                      { "type": "string" },
                      { "type": "array", "items": { "type": "string" } }
                    ]
                  }
                },
                "required": ["member"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Member(s) added" },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/api/v1/ldap/groups/{cn}/members/{member}": {
      "delete": {
        "summary": "Delete a member from a group",
        "parameters": [
          {
            "name": "cn",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "member",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Member deleted" },
          "400": { "description": "Bad request" }
        }
      }
    }
  },
  "components": {}
}

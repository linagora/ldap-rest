{
  "name": "mini-dm",
  "version": "0.0.1",
  "description": "Light directory manager",
  "main": "dist/bin/index.js",
  "bin": {
    "mini-dm": "dist/bin/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:prod",
    "build:prod": "npm run clean && NODE_ENV=production rollup -c",
    "build:dev": "npm run clean && rollup -c",
    "build:watch": "rollup -c --watch",
    "clean": "rimraf dist/* bin/*",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format:fix",
    "format:check": "prettier --check .",
    "format:check-diff": "prettier --check $(git diff $(git rev-parse --abbrev-ref --symbolic-full-name @{u}) --name-status|grep -E '^M|A'|cut -f2)",
    "format:fix": "prettier --write .",
    "format:fix-diff": "prettier --write $(git checkout|grep -E '^(M|A)'|cut -f2)",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "start": "./dist/bin/server.js",
    "dev": "npm run build:dev && npm start",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linagora/mini-dm.git"
  },
  "keywords": [
    "Identity-Manager"
  ],
  "author": "Xavier Guimard <yadd@debian.org>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/linagora/mini-dm/issues"
  },
  "homepage": "https://github.com/linagora/mini-dm#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chai": "^5.2.2",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "chai": "^6.0.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "express": "^5.1.0",
    "ldapts": "^8.0.9",
    "lemonldap-ng-handler": "^0.7.1",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.2",
    "supertest": "^7.1.4",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "re2": "^1.22.1"
  }
}

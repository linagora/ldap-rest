{
  "name": "mini-dm",
  "version": "0.0.1",
  "description": "Light directory manager",
  "keywords": [
    "Identity-Manager"
  ],
  "homepage": "https://github.com/linagora/mini-dm#readme",
  "bugs": {
    "url": "https://github.com/linagora/mini-dm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linagora/mini-dm.git"
  },
  "license": "AGPL-3.0",
  "author": "Xavier Guimard <yadd@debian.org>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/bin/index.js",
      "types": "./dist/src/bin/index.d.ts"
    },
    "hooks": {
      "types": "./dist/src/hooks.d.ts"
    },
    "plugin-authllng": {
      "import": "./dist/plugins/authLlng.js",
      "types": "./dist/src/plugins/authLlng.d.ts"
    },
    "plugin-externalusersingroups": {
      "import": "./dist/plugins/externalUsersInGroups.js",
      "types": "./dist/src/plugins/externalUsersInGroups.d.ts"
    },
    "plugin-helloworld": {
      "import": "./dist/plugins/helloworld.js",
      "types": "./dist/src/plugins/helloworld.d.ts"
    },
    "plugin-ldapgroups": {
      "import": "./dist/plugins/ldapGroups.js",
      "types": "./dist/src/plugins/ldapGroups.d.ts"
    },
    "plugin-onldapchange": {
      "import": "./dist/plugins/onLdapChange.js",
      "types": "./dist/src/plugins/onLdapChange.d.ts"
    },
    "plugin-static": {
      "import": "./dist/plugins/static.js",
      "types": "./dist/src/plugins/static.d.ts"
    },
    "schema-groups": {
      "import": "./static/schemas/groups.json",
      "require": "./static/schemas/groups.json"
    }
  },
  "main": "dist/bin/index.mjs",
  "bin": {
    "mini-dm": "bin/index.mjs"
  },
  "files": [
    "bin",
    "dist",
    "static",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "npm run clean && npm run build:dockerfile && rollup -c",
    "build:docker": "./.dev.mk builddocker",
    "build:dockerfile": "./.dev.mk Dockerfile",
    "build:prod": "npm run clean && npm run build:dockerfile && NODE_ENV=production rollup -c",
    "build:watch": "rollup -c --watch",
    "check": "npm run lint && npm run format:check",
    "clean": "rimraf dist/*",
    "dev": "npm run build:dev && npm start",
    "fix": "npm run lint:fix && npm run format:fix",
    "format:check": "prettier --check .",
    "format:check-diff": "prettier --check $(git diff $(git rev-parse --abbrev-ref --symbolic-full-name @{u}) --name-status|grep -E '^M|A'|cut -f2)",
    "format:fix": "prettier --write .",
    "format:fix-diff": "prettier --write $(git checkout|grep -E '^(M|A)'|cut -f2)",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "start": "./dist/bin/server.js",
    "start:dev": "./.dev.mk start",
    "test": "tsc --noEmit && mocha",
    "test:dev": "./.dev.mk test",
    "test:one": "mocha --config .mocharc-one.json"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "ldapts": "^8.0.9"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chai": "^5.2.2",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "chai": "^6.0.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.2",
    "sort-package-json": "^3.4.0",
    "supertest": "^7.1.4",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "lemonldap-ng-handler": "^0.7.3",
    "re2": "^1.22.1"
  }
}